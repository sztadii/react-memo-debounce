{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "preserveConstEnums": true,
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": false //TODO Fix DebouncedContainer to allow declaration
  },
  "include": ["src"]
}
